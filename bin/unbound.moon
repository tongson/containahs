#!/usr/bin/env moon
buildah = require"buildah".from "docker://docker.io/library/alpine:edge"
RUN         "/sbin/apk upgrade --no-cache --available --no-progress"
RUN         "/sbin/apk add --no-cache unbound"
RM          "/var/cache/apk"
WIPE        "directories"
WIPE        "docs"
WIPE        "userland"
WIPE        "sh"
ENTRYPOINT  "/usr/sbin/unbound"
PUSH        "unbound", "1.10.1"
